{
  "compilerOptions": {
    "outDir": "bundle/js",
    "sourceMap": true,
    "strictNullChecks": false,
    "strict": true,
    "allowJs": false,
    "module": "es2015",
    "incremental": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "target": "es5",
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "webworker"
    ],
    "downlevelIteration": true,
    "baseUrl": "."
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}